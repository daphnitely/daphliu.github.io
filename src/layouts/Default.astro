---
import "normalize.css";
import "@fontsource/righteous";
import { Image } from 'astro:assets';
import "../styles/style.css";
import face from '../pages/_face.jpg'

const title = "Daphne Oakes";
const description =
  "Hi ðŸ‘‹ I'm a software engineer, speaker & actor!" 
---

<!DOCTYPE html>
<html lang="en-US">
  <head>
    <meta charset="UTF-8" />

    <title>
      {title} | {description}
    </title>
    <meta property="og:title" content={title} />
    <meta property="og:locale" content="en_US" />
    <meta name="description" content={description} />
    <meta property="og:description" content={description} />
    <link rel="canonical" href="https://daphneoakes.com" />
    <meta property="og:url" content="https://daphneoakes.com" />
    <meta property="og:site_name" content={title} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary" />
    <meta property="twitter:title" content={title} />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "description": "Software engineer, speaker & actor",
        "headline": "Daphne Oakes",
        "name": "Daphne Oakes",
        "url": "https://daphneoakes.com/"
      }
    </script>

    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#157878" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <section class="page-header"></section>

    <header class="profile-header">
      <Image
        class="profile-image"
        alt="Portrait of Daphne"
        height="300"
        width="300"
        densities={[1, 1.5, 2]}
        src={face}
        loading="eager"
      />
      <h1 class="project-name">{title}</h1>
      <p class="project-tagline">{description}</p>
    </header>

    <section class="main-content">
      <slot />
    </section>
  </body>
</html>
